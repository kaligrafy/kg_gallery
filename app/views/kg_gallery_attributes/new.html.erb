<h2>Nouvel attribut</h2>

<%= form_for @kgga, url: kg_gallery_attributes_path, :html => { :multipart => true } do |f| %>
  <p>
    <%= f.label :shortname, "Nom court" %><br>
    <%= f.text_field :shortname %>
  </p>
  
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  
  <p>
    <%= f.label :datatype, "Type de données" %><br>
    <%= f.text_field :datatype %>
  </p>
  
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  
  <p>
    <%= f.label :has_choices, "Liste d’éléments" %><br>
    <%= f.check_box :has_choices %>
  </p>
  
  <p>
    <%= f.label :has_multiple_choices, "Liste d’éléments multiples" %><br>
    <%= f.check_box :has_multiple_choices %>
  </p>
  
  <p>
    <%= f.submit %>
  </p>
<% end %>
